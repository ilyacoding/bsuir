<section class="shortstory">
    <header><h2><a class="shortstory-link" href="/item/{ID}">{TITLE}</a></h2></header>
    <p class="shortstory-bar">Время добавления: {DATE} | Категория: {CAT_NAME} | Страна: {X_COUNTRY}</p>
    <hr>
    <div class="shortstory-block">
        <div class="shortstory-img">
            <img src="{IMG}">
        </div>
        <div class="shortstory-content">
            {SHORT_DESC}
        </div>
    </div>

    <div class="shortstory-more">
        <a href="/item/{ID}">Подробнее</a>
    </div>
</section>